{
    "description": "Access to exhentai.org",
    "manifest_version": 2,
    "name": "Exhentai Passport",
    "version": "0.0.9",
    "homepage_url": "https://github.com/harytfw/Exhentai-passport-for-firefox-webextension",
    "author": "harytfw",
    "permissions": [
        "*://exhentai.org/",
        "*://forums.e-hentai.org/",
        "cookies"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [{
        "matches": [
            "*://exhentai.org/"
        ],
        "js": [
            "content-exhentai.js"
        ]
    }],
    "applications": {
        "gecko": {
            "id": "exhentaipassport@harytfw",
            "strict_min_version": "48.0"
        }
    }
}
